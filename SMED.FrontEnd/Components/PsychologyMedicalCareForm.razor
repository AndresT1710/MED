        </div>

        <!-- Pestaña 6: Avances -->
        <div class="tab-pane @(activeTab == "progress" ? "show active" : "")" role="tabpanel">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-line me-2"></i>Avances del Paciente
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Sección en desarrollo</strong> - Aquí irá la información de los avances y progreso del paciente.
                    </div>

                    <div class="text-center py-5">
                        <i class="fas fa-chart-line fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">Avances del Paciente</h5>
                        <p class="text-muted">Esta sección estará disponible próximamente</p>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <button class="btn btn-secondary" @onclick="@(() => SetActiveTab("activities"))">
                            <i class="fas fa-arrow-left me-2"></i>Volver
                        </button>
                        <button class="btn btn-success" @onclick="FinalizarAtencionPsicologia" disabled="@isSaving">
                            @if (isSaving)
                            {
                                <span class="spinner-border spinner-border-sm me-2"></span>
                            }
                            <i class="fas fa-check me-2"></i>Finalizar Atención
                        </button>
                    </div>
