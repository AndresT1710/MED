@code {
    [Parameter] public ClinicalHistoryDTO History { get; set; }
    
    private int CalculateAge(DateTime birthDate)
    {
        var today = DateTime.Today;
        var age = today.Year - birthDate.Year;
        if (birthDate.Date > today.AddYears(-age)) age--;
        return age;
    }

    // Métodos para manejar las hospitalizaciones
    private bool HasHospitalizationsData()
    {
        // Verificar diferentes nombres de propiedades posibles
        return (History.HospitalizationsHistories != null && History.HospitalizationsHistories.Any()) ||
               (History.HospitalizationsHistories != null && History.HospitalizationsHistories.Any()) ||
               (GetHospitalizationsData()?.Any() == true);
    }

    private IEnumerable<dynamic> GetHospitalizationsData()
    {
        // Intentar con diferentes nombres de propiedades
        if (History.HospitalizationsHistories != null && History.HospitalizationsHistories.Any())
            return History.HospitalizationsHistories;

        if (History.HospitalizationsHistories != null && History.HospitalizationsHistories.Any())
            return History.HospitalizationsHistories;

        // Si no hay propiedades específicas, buscar en propiedades genéricas
        var properties = History.GetType().GetProperties();
        var hospitalizationProperty = properties.FirstOrDefault(p =>
            p.Name.Contains("Hospitalization", StringComparison.OrdinalIgnoreCase) &&
            p.PropertyType.IsGenericType);

        if (hospitalizationProperty != null)
        {
            var value = hospitalizationProperty.GetValue(History);
            if (value is IEnumerable<object> enumerable && enumerable.Any())
                return enumerable.Cast<dynamic>();
        }

        return Enumerable.Empty<dynamic>();
    }
