    private async Task RefreshPsychologicalDiagnosisTable()
    {
        psychologicalDiagnosisRows.Clear();
        psychologicalDiagnosisIds.Clear();

        foreach (var diagnosis in psychologicalDiagnosisList)
        {
            var cie10 = !string.IsNullOrEmpty(diagnosis.CIE10) ? diagnosis.CIE10 : "N/A";
            var denomination = !string.IsNullOrEmpty(diagnosis.Denomination)
                ? (diagnosis.Denomination.Length > 50 ? diagnosis.Denomination.Substring(0, 50) + "..." : diagnosis.Denomination)
                : "Sin denominación";
            var diagnosticTypeName = await DiagnosticTypeService.GetDiagnosticTypeNameByIdAsync(diagnosis.DiagnosticTypeId);
            var differential = !string.IsNullOrEmpty(diagnosis.DifferentialDiagnosis)
                ? (diagnosis.DifferentialDiagnosis.Length > 50 ? diagnosis.DifferentialDiagnosis.Substring(0, 50) + "..." : diagnosis.DifferentialDiagnosis)
                : "Sin diagnóstico diferencial";

            psychologicalDiagnosisRows.Add(new List<string> { cie10, denomination, diagnosticTypeName, differential });
            psychologicalDiagnosisIds.Add(diagnosis.PsychologicalDiagnosisId);
        }

        StateHasChanged();
