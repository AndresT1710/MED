            return;
        }

        if (!decimal.TryParse(value, out decimal numValue))
        {
            vitalSignsErrors[field] = "Debe ser un valor numérico";
            return;
        }

        // Validaciones específicas por campo
        switch (field)
        {
            case "peso":
