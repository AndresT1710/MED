            mobileError = "Solo se permiten números";
            return;
        }

        if (mobile.Length != 10)
        {
            mobileError = "Debe tener exactamente 10 dígitos";
            return;
        }

        if (!mobile.StartsWith("09"))
        {
            mobileError = "Debe empezar con 09";
            return;
        }

        mobileError = "";
    }

