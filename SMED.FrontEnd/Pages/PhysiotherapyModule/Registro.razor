    private async Task EditMedicalCare(string id)
    {
        if (int.TryParse(id, out int idInt))
        {
            try
            {
                var medicalCare = await MedicalCareService.GetByIdAsync(idInt);
                if (medicalCare != null)
                {
                    selectedMedicalCare = medicalCare;
                    showForm = true;
                }
                else
                {
                    await JS.InvokeVoidAsync("alert", "No se pudo cargar la atención de fisioterapia");
                }
            }
            catch (Exception ex)
            {
                await JS.InvokeVoidAsync("console.error", $"Error cargando atención de fisioterapia: {ex.Message}");
                await JS.InvokeVoidAsync("alert", "Error al cargar la atención de fisioterapia");
            }
        }
    }

    private async Task DeleteMedicalCare(string id)
    {
        if (!int.TryParse(id, out int idInt))
        {
            await JS.InvokeVoidAsync("alert", "ID inválido");
            return;
        }

        var medicalCareToDelete = filteredMedicalCareList.FirstOrDefault(mc => mc.CareId == idInt);
        if (medicalCareToDelete == null)
        {
            await JS.InvokeVoidAsync("alert", "Atención de fisioterapia no encontrada");
            return;
        }

        bool confirmed = await JS.InvokeAsync<bool>("confirm",
            $"¿Estás seguro de eliminar la atención de fisioterapia del paciente {medicalCareToDelete.NamePatient}?\n\nEsta acción no se puede deshacer.");

        if (confirmed)
        {
            try
            {
                var result = await MedicalCareService.DeleteAsync(idInt);
                if (result.Success)
                {
                    await LoadPhysiotherapyCareData();
                    await JS.InvokeVoidAsync("alert", "Atención de fisioterapia eliminada exitosamente");
                }
                else
                {
                    await JS.InvokeVoidAsync("alert", $"Error al eliminar la atención de fisioterapia: {result.Error}");
                }
            }
            catch (Exception ex)
            {
                await JS.InvokeVoidAsync("console.error", $"Error eliminando: {ex.Message}");
                await JS.InvokeVoidAsync("alert", "Error inesperado al eliminar la atención de fisioterapia");
            }
        }
    }

