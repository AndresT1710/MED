@namespace SMED.FrontEnd.Components
@using SMED.Shared.DTOs
@using SMED.Shared.Entity
@using SMED.FrontEnd.Services
@inject MedicalCareService MedicalCareService
@inject HealthProfessionalService HealthProfessionalService
@inject PlaceOfAttentionService PlaceService
@inject ReasonForConsultationService ReasonForConsultationService
@inject LocationService LocationService
@inject AuthorizationService AuthorizationService
@inject IJSRuntime JS
@inject NavigationManager Navigation
@inject PsychologicalDiagnosisService PsychologicalDiagnosisService
@inject DiagnosticTypeService DiagnosticTypeService
@inject TherapeuticPlanService TherapeuticPlanService
@inject PsychologySessionsService PsychologySessionsService
@implements IDisposable

<div class="psychology-care-form">
    <!-- Sistema de pestañas -->
    <ul class="nav nav-tabs" id="psychologyTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link @(activeTab == "patient" ? "active" : "")"
                    @onclick="@(() => SetActiveTab("patient"))"
                    type="button" role="tab">
                <i class="fas fa-user me-2"></i>Selección de Paciente
                @if (IsPatientTabComplete())
                {
                    <span class="badge bg-success ms-1">✓</span>
                }
                else
                {
                    <span class="badge bg-danger ms-1">*</span>
                }
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link @(activeTab == "diagnosis" ? "active" : "")"
                    @onclick="@(() => SetActiveTab("diagnosis"))"
                    type="button" role="tab"
                    disabled="@(!IsPatientTabComplete() || currentMedicalCareId == 0)">
                <i class="fas fa-stethoscope me-2"></i>Diagnóstico Psicológico
                @if (IsPsychologicalDiagnosisTabComplete())
                {
                    <span class="badge bg-success ms-1">✓</span>
                }
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link @(activeTab == "plan" ? "active" : "")"
                    @onclick="@(() => SetActiveTab("plan"))"
                    type="button" role="tab"
                    disabled="@(!IsPatientTabComplete() || currentMedicalCareId == 0)">
                <i class="fas fa-clipboard-list me-2"></i>Plan Terapéutico
                @if (IsTherapeuticPlanTabComplete())
                {
                    <span class="badge bg-success ms-1">✓</span>
                }
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link @(activeTab == "sessions" ? "active" : "")"
                    @onclick="@(() => SetActiveTab("sessions"))"
                    type="button" role="tab"
                    disabled="@(!IsPatientTabComplete() || currentMedicalCareId == 0)">
                <i class="fas fa-calendar-alt me-2"></i>Sesiones
                @if (IsPsychologySessionsTabComplete())
                {
                    <span class="badge bg-success ms-1">✓</span>
                }
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link @(activeTab == "activities" ? "active" : "")"
                    @onclick="@(() => SetActiveTab("activities"))"
                    type="button" role="tab"
                    disabled="@(!IsPatientTabComplete() || currentMedicalCareId == 0)">
                <i class="fas fa-tasks me-2"></i>Actividades
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link @(activeTab == "progress" ? "active" : "")"
                    @onclick="@(() => SetActiveTab("progress"))"
                    type="button" role="tab"
                    disabled="@(!IsPatientTabComplete() || currentMedicalCareId == 0)">
                <i class="fas fa-chart-line me-2"></i>Avances
            </button>
        </li>
    </ul>

    <div class="tab-content mt-3">
        <!-- Pestaña 1: Selección de Paciente -->
        <div class="tab-pane @(activeTab == "patient" ? "show active" : "")" role="tabpanel">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-brain me-2"></i>Selección de Paciente - Psicología
                        <span class="badge bg-danger ms-2">Obligatorio</span>
                        <span class="badge bg-success ms-2">
                            <i class="fas fa-brain me-1"></i>Área: Psicología
                        </span>
                    </h5>
                </div>
                <div class="card-body">
                    @if (!isEditMode)
                    {
                        <div class="mb-3">
                            <label class="form-label fw-bold">Paciente *</label>
                            <PatientSelector @bind-Value="clinicalHistoryId"
                                             OnPatientSelected="HandlePatientSelected" />
                            @if (showValidationErrors && selectedPatientId <= 0)
                            {
                                <div class="text-danger mt-1">
                                    <small><i class="fas fa-exclamation-triangle me-1"></i>Debe seleccionar un paciente</small>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            Editando atención de psicología existente. Paciente: @selectedHistoryNumber
                        </div>
                    }

                    @if (selectedPatientId > 0)
                    {
                        <div class="alert alert-success mt-3">
                            <i class="fas fa-check-circle me-2"></i>
                            Paciente seleccionado correctamente. Historia Clínica: @selectedHistoryNumber
                        </div>

                        <div class="alert alert-info mb-3">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-info-circle me-2"></i>
                                <div>
                                    <strong>Área de Atención:</strong> Psicología
                                    <br>
                                    <small class="text-muted">Esta atención se registrará automáticamente en el área de Psicología.</small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label class="form-label fw-bold">Lugar de Atención *</label>
                                <select class="form-select @(showValidationErrors && string.IsNullOrEmpty(lugarSeleccionada) ? "is-invalid" : "")"
                                        @bind="lugarSeleccionada">
                                    <option value="">Seleccione el lugar de Atención</option>
                                    @foreach (var lugar in lugaresAtencion)
                                    {
                                        <option value="@lugar.Id">@lugar.Name</option>
                                    }
                                </select>
                                @if (showValidationErrors && string.IsNullOrEmpty(lugarSeleccionada))
                                {
                                    <div class="invalid-feedback">
                                        Debe seleccionar un lugar de atención
                                    </div>
                                }
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Motivo de la Consulta *</label>
                            <textarea class="form-control @(showValidationErrors && string.IsNullOrWhiteSpace(motivoConsulta) ? "is-invalid" : "")"
                                      @bind="motivoConsulta"
                                      rows="3"
                                      placeholder="Describa el motivo principal de la consulta psicológica..."
                                      maxlength="500"></textarea>
                            @if (showValidationErrors && string.IsNullOrWhiteSpace(motivoConsulta))
                            {
                                <div class="invalid-feedback">
                                    Debe ingresar el motivo de la consulta
                                </div>
                            }
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Psicólogo *</label>

                            @if (profesionalCargado)
                            {
                                @if (profesionalLogueado != null)
                                {
                                    <div class="alert alert-success">
                                        <i class="fas fa-user-md me-2"></i>
                                        <strong>Psicólogo asignado automáticamente:</strong>
                                        @profesionalLogueado.FullName - @profesionalLogueado.NameTypeProfessional
                                        <input type="hidden" @bind="selectedHealthProfessionalId" />
                                        <div class="mt-1">
                                            <small class="text-muted">
                                                <i class="fas fa-info-circle me-1"></i>
                                                Usted ha sido asignado automáticamente como el profesional responsable.
                                            </small>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="alert alert-warning">
                                        <i class="fas fa-exclamation-triangle me-2"></i>
                                        <strong>No se pudo identificar su perfil profesional.</strong>
                                        <div class="mt-2">
                                            <select class="form-select @(showValidationErrors && selectedHealthProfessionalId <= 0 ? "is-invalid" : "")"
                                                    @bind="selectedHealthProfessionalId">
                                                <option value="0">Seleccione un psicólogo manualmente</option>
                                                @foreach (var profesional in psicologos)
                                                {
                                                    <option value="@profesional.HealthProfessionalId">
                                                        @profesional.FullName - @profesional.NameTypeProfessional
                                                    </option>
                                                }
                                            </select>
                                        </div>
                                        @if (showValidationErrors && selectedHealthProfessionalId <= 0)
                                        {
                                            <div class="invalid-feedback d-block">
                                                Debe seleccionar un psicólogo responsable
                                            </div>
                                        }
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="text-center">
                                    <div class="spinner-border spinner-border-sm me-2"></div>
                                    <span>Cargando información del profesional...</span>
                                </div>
                            }
                        </div>

                        @if (!IsPatientTabComplete())
                        {
                            <div class="alert alert-warning">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                Complete todos los campos obligatorios para continuar a las siguientes pestañas.
                            </div>
                        }

                        <div class="d-flex justify-content-between mt-3">
                            <div>
                                <button class="btn btn-outline-secondary" @onclick="ValidateAndShowErrors">
                                    <i class="fas fa-check me-2"></i>Validar Información
                                </button>
                            </div>
                            <div>
                                @if (IsPatientTabComplete())
                                {
                                    <button class="btn btn-success me-2" @onclick="GuardarDatosPaciente" disabled="@isSaving">
                                        @if (isSaving)
                                        {
                                            <span class="spinner-border spinner-border-sm me-2"></span>
                                        }
                                        <i class="fas fa-save me-2"></i>@(currentMedicalCareId > 0 ? "Actualizar" : "Guardar") Datos Básicos
                                    </button>
                                    @if (currentMedicalCareId > 0)
                                    {
                                        <button class="btn btn-primary" @onclick="@(() => SetActiveTab("diagnosis"))">
                                            Continuar a Diagnóstico <i class="fas fa-arrow-right ms-2"></i>
                                        </button>
                                    }
                                }
                                else
                                {
                                    <button class="btn btn-secondary" disabled>
                                        Complete la información obligatoria
                                    </button>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Pestaña 2: Diagnóstico Psicológico -->
        <div class="tab-pane @(activeTab == "diagnosis" ? "show active" : "")" role="tabpanel">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-brain me-2"></i>Diagnóstico Psicológico
                        <span class="badge bg-info ms-2">Opcional</span>
                    </h5>
                    <small class="text-muted">Diagnóstico psicológico del paciente</small>
                </div>
                <div class="card-body">
                    @if (currentMedicalCareId > 0)
                    {
                        <div class="alert alert-info mb-3">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Información:</strong> Puede registrar diagnósticos psicológicos para esta atención.
                        </div>

                        <EditableTable Title="Diagnósticos Psicológicos"
                                       ColumnHeaders="@psychologicalDiagnosisHeaders"
                                       Rows="@psychologicalDiagnosisRows"
                                       RowIds="@psychologicalDiagnosisIds"
                                       EmptyMessage="No se han registrado diagnósticos psicológicos"
                                       DeleteConfirmationMessage="¿Está seguro que desea eliminar este diagnóstico psicológico?"
                                       ShowAddButton="true"
                                       ShowEditButton="true"
                                       ShowDeleteButton="true"
                                       ShowActions="true"
                                       OnAddRequested="@OnAddPsychologicalDiagnosisRequested"
                                       OnEditRequested="@OnEditPsychologicalDiagnosisRequested"
                                       OnDeleteRequested="@OnDeletePsychologicalDiagnosisRequested"
                                       OnSaveRequested="@OnSavePsychologicalDiagnosisRequested"
                                       IsValidForm="@IsPsychologicalDiagnosisFormValid">
                            <EditModalContent>
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label class="form-label fw-bold">CIE10 <span class="text-danger">*</span></label>
                                        <input type="text"
                                               class="form-control @(psychologicalDiagnosisErrors.ContainsKey("CIE10") ? "is-invalid" : "")"
                                               @bind="currentPsychologicalDiagnosis.CIE10"
                                               maxlength="20"
                                               placeholder="Ingrese el código CIE10"
                                               disabled="@isUnidentifiedCie10Psychological" />
                                        @if (psychologicalDiagnosisErrors.ContainsKey("CIE10"))
                                        {
                                            <div class="invalid-feedback">@psychologicalDiagnosisErrors["CIE10"]</div>
                                        }
                                        <small class="form-text text-muted">
                                            Máximo 20 caracteres. Restantes: @(20 - (currentPsychologicalDiagnosis.CIE10?.Length ?? 0))
                                        </small>

                                        <div class="form-check mt-2">
                                            <input class="form-check-input"
                                                   type="checkbox"
                                                   id="unidentifiedCie10PsychologicalCheck"
                                                   checked="@isUnidentifiedCie10Psychological"
                                                   @onchange="HandleUnidentifiedCie10CheckboxChanged" />
                                            <label class="form-check-label" for="unidentifiedCie10PsychologicalCheck">
                                                No Identificado
                                            </label>
                                        </div>

                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label fw-bold">Tipo de Diagnóstico <span class="text-danger">*</span></label>
                                        <select class="form-select @(psychologicalDiagnosisErrors.ContainsKey("DiagnosticTypeId") ? "is-invalid" : "")"
                                                @bind="currentPsychologicalDiagnosis.DiagnosticTypeId">
                                            <option value="0">Seleccione un tipo de diagnóstico</option>
                                            @foreach (var type in availableDiagnosticTypes)
                                            {
                                                <option value="@type.Id">@type.Name</option>
                                            }
                                        </select>
                                        @if (psychologicalDiagnosisErrors.ContainsKey("DiagnosticTypeId"))
                                        {
                                            <div class="invalid-feedback">@psychologicalDiagnosisErrors["DiagnosticTypeId"]</div>
                                        }
                                    </div>
                                    <div class="col-12">
                                        <label class="form-label fw-bold">Denominación <span class="text-danger">*</span></label>
                                        <textarea class="form-control @(psychologicalDiagnosisErrors.ContainsKey("Denomination") ? "is-invalid" : "")"
                                                  @bind="currentPsychologicalDiagnosis.Denomination"
                                                  rows="3"
                                                  maxlength="500"
                                                  placeholder="Describa la denominación del diagnóstico psicológico..."
                                                  style="resize: vertical; max-height: 150px;"></textarea>
                                        @if (psychologicalDiagnosisErrors.ContainsKey("Denomination"))
                                        {
                                            <div class="invalid-feedback">@psychologicalDiagnosisErrors["Denomination"]</div>
                                        }
                                        <small class="form-text text-muted">
                                            Máximo 500 caracteres. Restantes: @(500 - (currentPsychologicalDiagnosis.Denomination?.Length ?? 0))
                                        </small>
                                    </div>
                                    <div class="col-12">
                                        <label class="form-label fw-bold">Motivación del Diagnóstico <span class="text-danger">*</span></label>
                                        <textarea class="form-control @(psychologicalDiagnosisErrors.ContainsKey("DiagnosisMotivation") ? "is-invalid" : "")"
                                                  @bind="currentPsychologicalDiagnosis.DiagnosisMotivation"
                                                  rows="4"
                                                  maxlength="1000"
                                                  placeholder="Describa la motivación del diagnóstico psicológico..."
                                                  style="resize: vertical; min-height: 100px; max-height: 200px;"></textarea>
                                        @if (psychologicalDiagnosisErrors.ContainsKey("DiagnosisMotivation"))
                                        {
                                            <div class="invalid-feedback">@psychologicalDiagnosisErrors["DiagnosisMotivation"]</div>
                                        }
                                        <small class="form-text text-muted">
                                            Máximo 1000 caracteres. Restantes: @(1000 - (currentPsychologicalDiagnosis.DiagnosisMotivation?.Length ?? 0))
                                        </small>
                                    </div>
                                    <div class="col-12">
                                        <label class="form-label fw-bold">Diagnóstico Diferencial</label>
                                        <textarea class="form-control @(psychologicalDiagnosisErrors.ContainsKey("DifferentialDiagnosis") ? "is-invalid" : "")"
                                                  @bind="currentPsychologicalDiagnosis.DifferentialDiagnosis"
                                                  rows="4"
                                                  maxlength="1000"
                                                  placeholder="Describa el diagnóstico diferencial (condiciones consideradas y descartadas)..."
                                                  style="resize: vertical; min-height: 100px; max-height: 200px;"></textarea>
                                        @if (psychologicalDiagnosisErrors.ContainsKey("DifferentialDiagnosis"))
                                        {
                                            <div class="invalid-feedback">@psychologicalDiagnosisErrors["DifferentialDiagnosis"]</div>
                                        }
                                        <small class="form-text text-muted">
                                            Máximo 1000 caracteres. Restantes: @(1000 - (currentPsychologicalDiagnosis.DifferentialDiagnosis?.Length ?? 0))
                                        </small>
                                    </div>
                                </div>
                                @if (!string.IsNullOrEmpty(psychologicalDiagnosisFormError))
                                {
                                    <div class="alert alert-danger mt-3">
                                        <i class="fas fa-exclamation-triangle me-2"></i>
                                        @psychologicalDiagnosisFormError
                                    </div>
                                }
                            </EditModalContent>
                        </EditableTable>

                        <div class="d-flex justify-content-between mt-4">
                            <button class="btn btn-secondary" @onclick="@(() => SetActiveTab("patient"))">
                                <i class="fas fa-arrow-left me-2"></i>Volver
                            </button>
                            <div>
                                @if (hasUnsavedPsychologicalDiagnosisData)
                                {
                                    <div class="alert alert-warning d-inline-block me-2 mb-0 py-1 px-2">
                                        <small><i class="fas fa-exclamation-triangle me-1"></i>Hay cambios sin guardar</small>
                                    </div>
                                }
                                <button class="btn btn-primary" @onclick="@(() => SetActiveTab("plan"))">
                                    Continuar a Plan Terapéutico <i class="fas fa-arrow-right ms-2"></i>
                                </button>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            Debe guardar primero los datos básicos del paciente para acceder a esta sección.
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Pestaña 3: Plan Terapéutico -->
        <div class="tab-pane @(activeTab == "plan" ? "show active" : "")" role="tabpanel">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-clipboard-list me-2"></i>Plan Terapéutico
                        <span class="badge bg-info ms-2">Opcional</span>
                    </h5>
                    <small class="text-muted">Planes terapéuticos por diagnóstico psicológico</small>
                </div>
                <div class="card-body">
                    @if (currentMedicalCareId > 0)
                    {
                        @if (!psychologicalDiagnosisList.Any())
                        {
                            <div class="alert alert-warning mb-4">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-exclamation-triangle me-2"></i>
                                    <div>
                                        <strong>No hay diagnósticos psicológicos registrados</strong>
                                        <p class="mb-0">Debe registrar al menos un diagnóstico psicológico en la pestaña anterior para poder asignar planes terapéuticos.</p>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info mb-3">
                                <i class="fas fa-info-circle me-2"></i>
                                <strong>Información:</strong> Puede asignar planes terapéuticos específicos a cada diagnóstico psicológico registrado.
                            </div>

                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>CIE10</th>
                                            <th>Denominación</th>
                                            <th>Tipo Diagnóstico</th>
                                            <th>Diagnóstico Diferencial</th>
                                            <th>Planes Terapéuticos</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var diagnosis in psychologicalDiagnosisList)
                                        {
                                            <tr>
                                                <td>@diagnosis.CIE10</td>
                                                <td>@diagnosis.Denomination</td>
                                                <td>@(availableDiagnosticTypes.FirstOrDefault(t => t.Id == diagnosis.DiagnosticTypeId)?.Name ?? "N/A")</td>
                                                <td>
                                                    @if (!string.IsNullOrEmpty(diagnosis.DifferentialDiagnosis))
                                                    {
                                                        <span title="@diagnosis.DifferentialDiagnosis">
                                                            @(diagnosis.DifferentialDiagnosis.Length > 50 ?
                                                                                                        diagnosis.DifferentialDiagnosis.Substring(0, 50) + "..." :
                                                                                                        diagnosis.DifferentialDiagnosis)
                                        </span>
                                                                                }
                                                    else
                                                    {
                                                        <span class="text-muted">Sin diagnóstico diferencial</span>
                                                    }
                                                </td>
                                                <td>
                                                    <button class="btn btn-success btn-sm" @onclick="() => OpenTherapeuticPlanModal(diagnosis.PsychologicalDiagnosisId)">
                                                        <i class="fas fa-eye me-1"></i>Gestionar Plan
                                                    </button>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }

                        <div class="d-flex justify-content-between mt-4">
                            <button class="btn btn-secondary" @onclick="@(() => SetActiveTab("diagnosis"))">
                                <i class="fas fa-arrow-left me-2"></i>Volver
                            </button>
                            <button class="btn btn-primary" @onclick="@(() => SetActiveTab("sessions"))">
                                Continuar a Sesiones <i class="fas fa-arrow-right ms-2"></i>
                            </button>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            Debe guardar primero los datos básicos del paciente para acceder a esta sección.
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Pestaña 4: Sesiones -->
        <div class="tab-pane @(activeTab == "sessions" ? "show active" : "")" role="tabpanel">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-calendar-alt me-2"></i>Sesiones de Terapia
                        <span class="badge bg-info ms-2">Opcional</span>
                    </h5>
                    <small class="text-muted">Registro de sesiones terapéuticas</small>
                </div>
                <div class="card-body">
                    @if (currentMedicalCareId > 0)
                    {
                        <div class="alert alert-info mb-3">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Información:</strong> Puede registrar las sesiones de terapia realizadas con el paciente.
                        </div>

                        <EditableTable Title="Sesiones de Terapia"
                                       ColumnHeaders="@psychologySessionsHeaders"
                                       Rows="@psychologySessionsRows"
                                       RowIds="@psychologySessionsIds"
                                       EmptyMessage="No se han registrado sesiones de terapia"
                                       DeleteConfirmationMessage="¿Está seguro que desea eliminar esta sesión?"
                                       ShowAddButton="true"
                                       ShowEditButton="true"
                                       ShowDeleteButton="true"
                                       ShowActions="true"
                                       OnAddRequested="@OnAddPsychologySessionRequested"
                                       OnEditRequested="@OnEditPsychologySessionRequested"
                                       OnDeleteRequested="@OnDeletePsychologySessionRequested"
                                       OnSaveRequested="@OnSavePsychologySessionRequested"
                                       IsValidForm="@IsPsychologySessionFormValid">
                            <EditModalContent>
                                <div class="row g-3">
                                    <div class="col-12">
                                        <label class="form-label fw-bold">Descripción <span class="text-danger">*</span></label>
                                        <textarea class="form-control @(psychologySessionsErrors.ContainsKey("Description") ? "is-invalid" : "")"
                                                  @bind="currentPsychologySession.Description"
                                                  rows="3"
                                                  maxlength="500"
                                                  placeholder="Describa la sesión de terapia..."
                                                  style="resize: vertical; max-height: 150px;"></textarea>
                                        @if (psychologySessionsErrors.ContainsKey("Description"))
                                        {
                                            <div class="invalid-feedback">@psychologySessionsErrors["Description"]</div>
                                        }
                                        <small class="form-text text-muted">
                                            Máximo 500 caracteres. Restantes: @(500 - (currentPsychologySession.Description?.Length ?? 0))
                                        </small>
                                    </div>

                                    <div class="col-md-6">
                                        <label class="form-label fw-bold">Fecha de Sesión <span class="text-danger">*</span></label>
                                        <input type="date"
                                               class="form-control @(psychologySessionsErrors.ContainsKey("Date") ? "is-invalid" : "")"
