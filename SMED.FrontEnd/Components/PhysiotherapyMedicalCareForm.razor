    private async Task GuardarDatosPaciente()
    {
        isSaving = true;
        showValidationErrors = true;

        try
        {
            await JS.InvokeVoidAsync("console.log", "🟡 Iniciando guardado de datos del paciente...");

            // Validaciones completas
            if (!IsPatientTabComplete())
            {
                await JS.InvokeVoidAsync("alert", "Debe completar toda la información obligatoria antes de guardar.");
                await JS.InvokeVoidAsync("console.error", "❌ Validación fallida - Campos obligatorios incompletos");
