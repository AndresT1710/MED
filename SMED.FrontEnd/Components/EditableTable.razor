@* COMPONENTE: EditableTable.razor *@

<div class="editable-table">
    <div class="editable-table-header">
        <div class="editable-table-title-section">
            <h5>@Title</h5>
            <div class="editable-table-controls">
                @if (ShowAddButton)
                {
                    <button class="btn btn-success btn-sm" @onclick="OpenAddModal">Agregar</button>
                }
            </div>
        </div>

        @if (ShowSearch && ColumnHeaders.Any())
        {
            <div class="editable-table-search-section">
                @for (int i = 0; i < ColumnHeaders.Count; i++)
                {
                    var columnIndex = i;
                    if (!IsColumnSearchable(columnIndex)) continue;

                    <div class="editable-table-search-group">
                        <span class="editable-table-search-label">@ColumnHeaders[columnIndex]:</span>
                        <input type="text"
                               class="editable-table-search-input"
                               placeholder="Buscar..."
                               value="@GetColumnFilter(columnIndex)"
                               @oninput="@(e => UpdateColumnFilter(columnIndex, e.Value?.ToString() ?? string.Empty))" />
                    </div>
                }
                <button class="btn btn-outline-secondary btn-sm" @onclick="ClearSearch" title="Limpiar búsqueda">
                    Limpiar
                </button>
            </div>
        }
    </div>

    <div class="editable-table-scroll">
        <table class="editable-table-content">
            <thead>
                <tr>
                    @foreach (var header in ColumnHeaders)
                    {
                        <th>@header</th>
                    }
                    @if (ShowActions)
                    {
                        <th class="action-column">Acciones</th>
                    }
                </tr>
            </thead>
            <tbody>
                @if (HasData)
                {
                    var displayedRows = GetDisplayedRows();
                    @foreach (var row in displayedRows)
                    {
                        <tr>
                            @foreach (var cell in row.Cells)
                            {
                                <td>@cell</td>
                            }
                            @if (ShowActions)
                            {
                                <td class="action-column">
                                    @if (RowCustomAction is not null)
                                    {
                                        @RowCustomAction(row.Id)
                                    }

                                    @if (ShowEditButton)
                                    {
                                        <button class="btn btn-sm btn-primary me-1" @onclick="() => EditRow(row.Id)" disabled="@(row.Id < 0)">Editar</button>
                                    }
                                    @if (ShowDeleteButton)
                                    {
                                        <button class="btn btn-sm btn-danger" @onclick="() => ConfirmDelete(row.Id)" disabled="@(row.Id < 0)">Eliminar</button>
                                    }
                                </td>
                            }
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="@TotalColumns" class="editable-table-empty">
                            @EmptyMessage
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (ShowPagination && HasData)
    {
        <div class="editable-table-pagination">
            <div class="editable-table-pagination-info">
                Mostrando @((CurrentPage - 1) * PageSize + 1) - @Math.Min(CurrentPage * PageSize, TotalFilteredRows) de @TotalFilteredRows registros
            </div>

            <div class="editable-table-pagination-controls">
                <select class="form-select form-select-sm editable-table-page-size" @bind="PageSize">
                    <option value="5">5 por página</option>
                    <option value="10">10 por página</option>
                    <option value="20">20 por página</option>
                    <option value="50">50 por página</option>
                </select>

                <button class="btn btn-sm btn-outline-primary editable-table-pagination-btn"
                        @onclick="FirstPage"
                        disabled="@(CurrentPage == 1)">
                    « Primero
                </button>
                <button class="btn btn-sm btn-outline-primary editable-table-pagination-btn"
                        @onclick="PreviousPage"
                        disabled="@(CurrentPage == 1)">
                    ‹ Anterior
                </button>

                <span class="editable-table-page-info">
                    Página @CurrentPage de @TotalPages
                </span>

                <button class="btn btn-sm btn-outline-primary editable-table-pagination-btn"
                        @onclick="NextPage"
                        disabled="@(CurrentPage == TotalPages)">
                    Siguiente ›
                </button>
                <button class="btn btn-sm btn-outline-primary editable-table-pagination-btn"
                        @onclick="LastPage"
                        disabled="@(CurrentPage == TotalPages)">
                    Último »
                </button>
            </div>
        </div>
    }

    @if (showAddModal)
    {
        <div class="modal-backdrop show" @onclick="CloseModal"></div>
        <div class="modal show d-block" tabindex="-1" @onclick="CloseModal">
            <div class="modal-dialog modal-lg" @onclick:stopPropagation="true">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">@(editingId == -1 ? "Agregar Registro" : "Editar Registro")</h5>
                        <button type="button" class="btn-close" @onclick="CloseModal"></button>
                    </div>
                    <div class="modal-body">
                        @EditModalContent
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CloseModal">Cancelar</button>
                        <button type="button" class="btn btn-primary" @onclick="SaveRow" disabled="@(!IsValidForm())">Guardar</button>
                    </div>
                </div>
            </div>
        </div>
    }

    @if (showDeleteConfirm)
    {
        <div class="modal-backdrop show" @onclick="() => showDeleteConfirm = false"></div>
        <div class="modal show d-block" tabindex="-1" @onclick="() => showDeleteConfirm = false">
            <div class="modal-dialog modal-sm" @onclick:stopPropagation="true">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Confirmar Eliminación</h5>
                        <button type="button" class="btn-close" @onclick="() => showDeleteConfirm = false"></button>
                    </div>
                    <div class="modal-body">
                        @DeleteConfirmationMessage
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="() => showDeleteConfirm = false">Cancelar</button>
                        <button type="button" class="btn btn-danger" @onclick="() => DeleteConfirmed()">Eliminar</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter] public string Title { get; set; } = "Tabla Editable";
    [Parameter] public List<string> ColumnHeaders { get; set; } = new();
    [Parameter] public List<List<string>> Rows { get; set; } = new();
    [Parameter] public List<int> RowIds { get; set; } = new();
    [Parameter] public string EmptyMessage { get; set; } = "No hay datos disponibles";
    [Parameter] public string DeleteConfirmationMessage { get; set; } = "¿Está seguro que desea eliminar este registro?";

    [Parameter] public bool ShowAddButton { get; set; } = true;
    [Parameter] public bool ShowEditButton { get; set; } = true;
    [Parameter] public bool ShowDeleteButton { get; set; } = true;
    [Parameter] public bool ShowActions { get; set; } = true;
    [Parameter] public bool ShowPagination { get; set; } = true;
    [Parameter] public bool ShowSearch { get; set; } = true;

    [Parameter] public RenderFragment EditModalContent { get; set; }
    [Parameter] public RenderFragment<int>? RowCustomAction { get; set; }
    [Parameter] public HashSet<int>? SearchableColumnIndexes { get; set; }

    [Parameter] public EventCallback<int> OnEditRequested { get; set; }
    [Parameter] public EventCallback<int> OnDeleteRequested { get; set; }
    [Parameter] public EventCallback OnAddRequested { get; set; }
    [Parameter] public EventCallback OnSaveRequested { get; set; }
    [Parameter] public Func<bool> IsValidForm { get; set; } = () => true;

    private int editingId = -1;
    private bool showAddModal = false;
    private bool showDeleteConfirm = false;

    // Paginación y búsqueda
    private int currentPage = 1;
    private int pageSize = 10;
    private List<string> columnFilters = new();

    private bool HasData => Rows?.Count > 0 && RowIds?.Count > 0 && Rows.Count == RowIds.Count;
    private int TotalColumns => ColumnHeaders.Count + (ShowActions ? 1 : 0);
    private int TotalFilteredRows { get; set; }
    private int TotalPages { get; set; }

    private bool IsColumnSearchable(int idx)
        => SearchableColumnIndexes is null || SearchableColumnIndexes.Contains(idx);

    protected override void OnInitialized()
    {
        InitializeColumnFilters();
    }

    protected override void OnParametersSet()
    {
        InitializeColumnFilters();
    }

    private void InitializeColumnFilters()
    {
        if (columnFilters.Count != ColumnHeaders.Count)
        {
            columnFilters = new List<string>(new string[ColumnHeaders.Count]);
            for (int i = 0; i < columnFilters.Count; i++)
            {
                columnFilters[i] = string.Empty;
            }
        }
    }

    private string GetColumnFilter(int index)
    {
        if (index >= 0 && index < columnFilters.Count)
        {
            return columnFilters[index] ?? string.Empty;
        }
        return string.Empty;
    }

    private void UpdateColumnFilter(int index, string value)
    {
        if (index >= 0 && index < columnFilters.Count)
        {
            columnFilters[index] = value ?? string.Empty;
            CurrentPage = 1;
            StateHasChanged();
        }
    }

    private int CurrentPage
    {
        get => currentPage;
        set
        {
            currentPage = value;
            StateHasChanged();
        }
    }

    private int PageSize
    {
        get => pageSize;
        set
        {
            pageSize = value;
            CurrentPage = 1;
            StateHasChanged();
        }
    }

    private List<TableRow> GetDisplayedRows()
    {
        var filteredRows = FilterRows();
        TotalFilteredRows = filteredRows.Count;
        TotalPages = (int)Math.Ceiling((double)TotalFilteredRows / PageSize);

        if (CurrentPage > TotalPages && TotalPages > 0)
        {
            CurrentPage = TotalPages;
        }

        return filteredRows
            .Skip((CurrentPage - 1) * PageSize)
            .Take(PageSize)
            .ToList();
    }

    private List<TableRow> FilterRows()
    {
        if (!HasData) return new List<TableRow>();

        var result = new List<TableRow>();

        for (int i = 0; i < Rows.Count; i++)
        {
            var rowId = i < RowIds.Count ? RowIds[i] : -1;
            var rowCells = Rows[i];

            var matchesAllFilters = true;
            for (int j = 0; j < columnFilters.Count && j < rowCells.Count; j++)
            {
                if (!IsColumnSearchable(j)) continue;
                if (!string.IsNullOrEmpty(columnFilters[j]))
                {
                    var cellValue = rowCells[j] ?? "";
                    if (!cellValue.Contains(columnFilters[j], StringComparison.OrdinalIgnoreCase))
                    {
                        matchesAllFilters = false;
                        break;
                    }
                }
            }

            if (matchesAllFilters)
            {
                result.Add(new TableRow
                {
                    Id = rowId,
                    Cells = rowCells
                });
            }
        }

        return result;
    }

    private void FirstPage() => CurrentPage = 1;
    private void PreviousPage() => CurrentPage = Math.Max(1, CurrentPage - 1);
    private void NextPage() => CurrentPage = Math.Min(TotalPages, CurrentPage + 1);
    private void LastPage() => CurrentPage = TotalPages;

    private void ClearSearch()
    {
        for (int i = 0; i < columnFilters.Count; i++)
        {
            columnFilters[i] = string.Empty;
        }
        CurrentPage = 1;
        StateHasChanged();
    }

    private void OpenAddModal()
    {
        editingId = -1;
        showAddModal = true;
        OnAddRequested.InvokeAsync();
    }

    private void EditRow(int id)
    {
        if (id < 0) return;
        editingId = id;
        showAddModal = true;
        OnEditRequested.InvokeAsync(id);
    }

    private void ConfirmDelete(int id)
    {
        if (id < 0) return;
        editingId = id;
        showDeleteConfirm = true;
    }

    private async Task DeleteConfirmed()
    {
        showDeleteConfirm = false;
        if (editingId >= 0)
        {
            await OnDeleteRequested.InvokeAsync(editingId);
        }
        editingId = -1;
    }

    private async Task SaveRow()
    {
        if (IsValidForm())
        {
            await OnSaveRequested.InvokeAsync();
            CloseModal();
        }
    }

    private void CloseModal()
    {
        showAddModal = false;
        editingId = -1;
    }

    private class TableRow
    {
        public int Id { get; set; }
        public List<string> Cells { get; set; } = new();
    }
}