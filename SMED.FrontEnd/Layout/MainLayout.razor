@inherits LayoutComponentBase
@inject IJSRuntime JS
@inject NavigationManager Navigation

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4 d-flex justify-content-between align-items-center">
            @if (!string.IsNullOrWhiteSpace(userName))
            {
                <div class="d-flex align-items-center gap-3">
                    <span>Hola, @userName</span>
                    <button class="btn btn-sm btn-outline-danger" @onclick="Logout">Cerrar sesión</button>
                </div>
            }
        </div>


        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    private string? userName;

    protected override async Task OnInitializedAsync()
    {
        userName = await JS.InvokeAsync<string>("localStorage.getItem", "userName");

        var token = await JS.InvokeAsync<string>("localStorage.getItem", "authToken");
        if (string.IsNullOrWhiteSpace(token))
        {
            Navigation.NavigateTo("/login", true);
        }
    }

    private async Task Logout()
    {
        await JS.InvokeVoidAsync("localStorage.removeItem", "authToken");
        await JS.InvokeVoidAsync("localStorage.removeItem", "userName");
        Navigation.NavigateTo("/login", true);
    }
}
