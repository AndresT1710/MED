@using Microsoft.AspNetCore.Components
@inject NavigationManager Navigation

<div class="card module-card h-100">
    <div class="card-header text-center card-title">
        <h5 class="mb-0">@Title</h5>
    </div>
    <div class="card-image">
        @if (!string.IsNullOrWhiteSpace(ImageUrl))
        {
            <img src="@ImageUrl" alt="@Title" class="img-fluid card-img" />
        }
        else
        {
            <div class="image-placeholder">
                <span class="oi oi-image"></span>
            </div>
        }
    </div>
    <div class="card-body text-center p-3">
        <p class="card-text card-description">@Description</p>
    </div>
    <div class="card-footer text-center bg-white border-top-0 pb-3">
        <button class="btn btn-primary card-btn" @onclick="NavigateToRoute">INGRESAR</button>
    </div>
</div>

@code {
    [Parameter] public string Title { get; set; }
    [Parameter] public string ImageUrl { get; set; } = "";
    [Parameter] public string Description { get; set; } = "Click to access";
    [Parameter] public string Route { get; set; }

    private void NavigateToRoute()
    {
        Navigation.NavigateTo(Route);
    }
}